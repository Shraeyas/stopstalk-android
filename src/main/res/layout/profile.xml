<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ing_back"
                android:layout_height="250dp">

                <TextView
                    android:text="UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="30sp"
                    android:layout_marginBottom="65dp"
                    android:textColor="@android:color/background_light"
                    android:textStyle="normal|bold"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignStart="@+id/textView8" />

                <TextView
                    android:text="IET Lucknow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:id="@+id/textView8"
                    android:textColor="@android:color/background_light"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="190dp" />

                <TextView
                    android:text="India"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:id="@+id/textView15"
                    android:textColor="@android:color/background_light"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="210dp" />


            </RelativeLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:text="Accuracy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:padding="20dp"
                    android:textSize="30sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="Codechef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button10"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:drawableLeft="@mipmap/cc"
                    android:background="@android:color/background_light"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:onClick="cc" />

                <Button
                    android:text="Codeforces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button9"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:background="@android:color/background_light"
                    android:drawableLeft="@mipmap/cf"
                    android:padding="10dp"
                    android:onClick="cf" />

                <Button
                    android:text="SPOJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:background="@android:color/background_light"
                    android:drawableLeft="@mipmap/so"
                    android:padding="10dp"
                    android:onClick="so" />

                <Button
                    android:text="HackerEarth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button7"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:background="@android:color/background_light"
                    android:drawableLeft="@mipmap/he"
                    android:padding="10dp"
                    android:onClick="he" />

                <Button
                    android:text="HackerRank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button6"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:background="@android:color/background_light"
                    android:drawableLeft="@mipmap/hr"
                    android:padding="10dp"
                    android:onClick="hr" />

                <Button
                    android:text="UVa Online Judge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:background="@android:color/background_light"
                    android:drawableLeft="@mipmap/uo"
                    android:padding="10dp"
                    android:onClick="uo" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.stopstalk.shraeyas.myapplication.MainActivity">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="500dp">

                </com.github.mikephil.charting.charts.PieChart>

                <TextView
                    android:text="Day Streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:padding="20dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="65dp"
                    android:background="@android:color/background_light"
                    android:layout_height="80dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dayStreak1"
                        android:paddingLeft="20dp" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dayStreak2"
                        android:paddingLeft="20dp" />

                </TableLayout>


                <TextView
                    android:text="Accepted Solution Streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginTop="140dp"
                    android:padding="20dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="205dp"
                    android:background="@color/cardview_light_background"
                    android:layout_height="80dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/acceptedStreak1"
                        android:paddingLeft="20dp" />


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/acceptedStreak2"
                        android:paddingLeft="20dp" />


                </TableLayout>


                <TextView
                    android:text="Accepted Solution Streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginTop="280dp"
                    android:padding="20dp" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="355dp"
                    android:background="@android:color/background_light"
                    android:layout_height="80dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/problem1"
                        android:paddingLeft="20dp" />


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/problem2"
                        android:paddingLeft="20dp" />


                </TableLayout>



            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>